
set expandtab
set shiftwidth=2
set softtabstop=2
set tabstop=2

set hlsearch
set background=dark
set viminfo=""
set visualbell t_vb="<Esc>|1f"
set noerrorbells
set nowrap
set noswapfile

if filereadable(findfile("~/.local.vimrc"))
  source ~/.local.vimrc
endif

if v:version >= 800
  packloadall
endif

silent! helptags ALL
