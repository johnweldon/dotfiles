
set expandtab
set shiftwidth=2
set softtabstop=2
set tabstop=2

set hlsearch
set background=dark
set viminfo=""
set visualbell t_vb="<Esc>|1f"
set noerrorbells
set nowrap
set noswapfile

set autowriteall

let g:ale_completion_autoimport = 1
let g:ale_completion_enabled = 1
set omnifunc=ale#completion#OmniFunc

hi Error ctermbg=DarkRed
hi SpellBad ctermbg=DarkRed

if filereadable(findfile("~/.local.vimrc"))
  source ~/.local.vimrc
endif

if v:version >= 800
  packloadall
endif

silent! helptags ALL
