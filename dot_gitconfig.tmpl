{{- with (index . "user") -}}
[user]
	name = {{ .name | quote }}
	email = {{ .email | quote }}

{{ end -}}
[core]
	excludesfile = ~/.local.gitignore

[init]
	defaultBranch = main

[pull]
	ff = only
	rebase = true

[rebase]
	autoStash = true

[push]
	default = simple
	autoSetupRemote = true

[apply]
	whitespace = fix

[diff "pdf"]
	textconv = pdftostdout

[format]
	pretty = %C(bold red)%h%Creset %C(white)%ad%Creset %Cgreen%aN%Creset %C(bold normal)%s%Creset %C(auto)%d%Creset

[http]
	cookiefile = {{ .chezmoi.homeDir }}/.gitcookies

[log]
	abbrevCommit = true
	date = relative
	decorate = auto

[include]
	path = .git.aliases
	path = .local.gitconfig

